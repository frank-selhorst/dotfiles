window:
  dynamic_padding: false
  padding:
    y: 7 # THIS EXACT LINE NUMBER IS USED IN nvim/init.lua DONT MOVE IT
    x: 7 # THIS EXACT LINE NUMBER IS USED IN nvim/init.lua DONT MOVE IT

# Font configuration
font:
  size: 13
  normal:
    family: JetBrains Mono Nerd Font
    style: Bold

  medium:
    family: JetBrains Mono Nerd Font
    style: Bold

  bold:
    family: JetBrains Mono Nerd Font
    style: Bold

  italic:
    family: JetBrains Mono Nerd Font
    style: Italic
